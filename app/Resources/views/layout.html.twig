{# General template of the site, including call of css and js (may be children will call theirs) #}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Jolydays{% endblock %}</title>

  {% block css %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Jolydays website test</h1>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Les annonces</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('jd_jolydays_homepage') }}">Home</a></li>
          <li><a href="{{ path('jd_jolydays_add') }}">Add post</a></li>
        </ul>
      </div>
      {# Empty block for the body #}
      <div id="content" class="col-md-9">        
        {% block body %}
        {% endblock %}
      </div>
      {# /End #}
    </div>
  </div>

  {% block js %}
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>