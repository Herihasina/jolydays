{# Template of a single post  #}
{% extends "JDJolydaysBundle::layout.html.twig" %}

{% block title %}
  View post - {{ parent() }}
{% endblock %}

{% block jolydaysbundle_body %}

  {# vars are from controller #}
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 text-center">
      <img src="{{ asset(post.image.webDir) }}" alt="{{post.image.alt}}" class="img-thumbnail" />
    </div>
    <div class="col-sm-12 text-justify">
       {% block page_title %}
        <h2 class="text-center">{{ post.title }}</h2>
      {% endblock %}
      <div class="col-sm-12">{{ post.content }}</div>
      <div class="col-sm-12 metadata-wrap">
        Posted by <span class="text-success">{{ post.author | upper }}</span> on <span class="text-success">{{ post.date|date('d/m/Y') }}</span>
      </div>
      <div class="col-sm-12 tags-wrap">
        <div class="row">
          <div class="col-sm-2">
            In categories:
          </div>
          <div class="col-sm-10">
            <ul class="list-inline">
              {% for category in categories %}
                <li>
                  <a href="{{ path('jd_jolydays_posts_in_cat', {'cat_name': category.name}) }}" title="" class="btn btn-default btn-xs">{{ category.name }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <a href="{{ path('jd_jolydays_homepage') }}" class="btn btn-default btn-xs">
        All posts
      </a>
      <a href="{{ path('jd_jolydays_edit', {'post_id': post.id}) }}" class="btn btn-default btn-xs">
        Edit
      </a>
      <a href="{{ path('jd_jolydays_delete', {'post_id': post.id}) }}" class="btn btn-danger btn-xs">
        Delete
      </a>
    </div>
  </div>

{% endblock %}