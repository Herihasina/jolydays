{# Template of adding post  #}

{% extends "JDJolydaysBundle::layout.html.twig" %}

{% block title %}
  Add post - {{ parent() }}
{% endblock %}

{% block jolydaysbundle_body %}

  <h2>Add post</h2>

  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  <div class="form-group">
    {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    <div class="col-sm-10">
      {{ form_widget(form.date) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.title, "Title", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    <div class="col-sm-10">
      {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.content, "Content", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
      {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.author, "Author", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    <div class="col-sm-10">
      {{ form_widget(form.author) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    <div class="col-sm-10">
      {{ form_widget(form.image) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.categories, "Select categories", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    <div class="col-sm-10">
      {{ form_widget(form.categories) }}
    </div>
  </div>

  
  <div class="form-group text-right">
  	<div class="col-sm-10 col-sm-offset-2">
	  	{# {{ form_rest(form) }} #}
	  	{{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
  	</div>
	</div>
  {{ form_end(form) }}

{% endblock %}