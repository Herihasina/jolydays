<form>
  <div class="form-group">
    <label for="input-title">Post title</label>
    <input type="text" class="form-control" id="input-title" placeholder="Post title">
  </div>
  <div class="form-group">
    <label for="input-author">Author</label>
    <input type="text" class="form-control" id="input-author" placeholder="Author">
  </div>
  <div class="form-group">
    <label for="input-content">Content</label>
    <textarea class="form-control" id="input-content" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>